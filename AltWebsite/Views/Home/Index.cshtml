@using AltWebsite.Models;
@model IEnumerable<Tourist>
@{
    ViewBag.Title = "Home Page";
}

@foreach (var item in Model)
{
    <div>

        <h4>@item.TouristInfo.FirstName</h4>
        <div>@item.TouristInfo.Country</div>
        <div>@item.Comments</div>
        <div>@item.Review</div>
        @Html.ActionLink("Bookings", "Bookings", new { Id = item.TouristInfoId })
        @Html.ActionLink("Edit Tourist", "Edit", new { Id = item.Id })
        @Html.ActionLink("Delete", "Delete", new { Id = item.Id })
    </div>
}

